{
  "compilerOptions": {
    // "outDir": "./dist",
    "target": "ES5",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "declaration": true, // 生成相应的 .d.ts 文件
    "removeComments": true, // 删除所有注释，除了以 /!* 开头的版权信息。
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}